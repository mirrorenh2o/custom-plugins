<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <!-- 插件基本信息 -->
   <extension id="ruyi" point="org.eclipse.core.runtime.applications">
      <application>
         <run class="org.ruyisdk.ruyi.core.RuyiApplication"/>
      </application>
   </extension>

   <!-- 首选项页面注册 -->
   <extension point="org.eclipse.ui.preferencePages">
      <page
            class="org.ruyisdk.ruyi.preferences.RuyiPreferencePage"
            id="org.ruyisdk.ruyi.preferencePage"
            name="Ruyi SDK"
            category="org.eclipse.ui.preferencePages.Workbench">
      </page>
   </extension>

   <!-- 首选项初始化器注册 -->
   <extension point="org.eclipse.core.runtime.preferences">
      <initializer class="org.ruyisdk.ruyi.preferences.RuyiPreferenceInitializer"/>
   </extension>

   <!-- 启动扩展点 -->
   <extension point="org.eclipse.ui.startup">
      <startup class="org.ruyisdk.ruyi.core.RuyiStartup"/>
   </extension>

   <!-- 命令定义 -->
   <extension point="org.eclipse.ui.commands">
      <command
            id="org.ruyisdk.ruyi.commands.checkInstallation"
            name="Check Ruyi Installation"
            description="Check the current Ruyi SDK installation status">
      </command>
      
      <command
            id="org.ruyisdk.ruyi.commands.openPreferences"
            name="Open Ruyi Preferences"
            description="Open Ruyi SDK preferences page">
      </command>
   </extension>

   <!-- 命令处理器 -->
   <extension point="org.eclipse.ui.handlers">
      <handler
            class="org.ruyisdk.ruyi.handlers.CheckInstallationHandler"
            commandId="org.ruyisdk.ruyi.commands.checkInstallation">
      </handler>
      
      <handler
            class="org.ruyisdk.ruyi.handlers.OpenPreferencesHandler"
            commandId="org.ruyisdk.ruyi.commands.openPreferences">
      </handler>
   </extension>

   <!-- 菜单贡献 -->
   <extension point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="org.ruyisdk.ruyi.menus.main"
               label="RuyiSDK"
               mnemonic="R">
            <command
                  commandId="org.ruyisdk.ruyi.commands.checkInstallation"
                  id="org.ruyisdk.ruyi.menus.checkInstallation"
                  label="Check Installation"
                  tooltip="Check Ruyi SDK installation status">
            </command>
            <command
                  commandId="org.ruyisdk.ruyi.commands.openPreferences"
                  id="org.ruyisdk.ruyi.menus.openPreferences"
                  label="Preferences"
                  tooltip="Open RuyiSDK preferences">
            </command>
         </menu>
      </menuContribution>
      
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.ruyisdk.ruyi.toolbars.main"
               label="Ruyi SDK">
            <command
                  commandId="org.ruyisdk.ruyi.commands.checkInstallation"
                  id="org.ruyisdk.ruyi.toolbars.checkInstallation"
                  style="push">
               <visibleWhen>
                  <with variable="activeWorkbenchWindow.activePerspective">
                     <equals value="org.eclipse.jdt.ui.JavaPerspective"/>
                  </with>
               </visibleWhen>
            </command>
         </toolbar>
      </menuContribution>
   </extension>

   <!-- 视图扩展 -->
   <extension point="org.eclipse.ui.views">
      <view
            class="org.ruyisdk.ruyi.views.RuyiStatusView"
            id="org.ruyisdk.ruyi.views.status"
            name="Ruyi Status"
            restorable="true">
      </view>
   </extension>

   <!-- 透视图扩展 -->
   <extension point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               id="org.ruyisdk.ruyi.views.status"
               minimized="false"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               ratio="0.2"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>

   <!-- 产品扩展 (可选) -->
   <extension point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.ui.ide.workbench"
            name="Ruyi SDK">
         <property name="aboutText" value="Ruyi SDK Development Environment"/>
         <property name="aboutImage" value="icons/ruyi_about.png"/>
      </product>
   </extension>
</plugin>